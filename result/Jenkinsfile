pipeline {
    agent any

    tools {
        nodejs 'NodeJS 16.4.2'
    }

    stages {
        stage('build') {
            when {
                branch 'master'
                changeset "**/result/**"
            }
            steps {
                echo 'Compiling result app'
                dir('result'){
                        sh 'npm install'
                }
            }
        }
        stage('test') {
            when {
                branch 'master'
                changeset "**/result/**"
            }
            steps {
                echo 'Running Unit Tests on result app'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }
}
